{
    "name": "Twitcasting CheckBox All Select",
    "short_name": "Twitcasting Checkbox Select",
    "description": "ツイキャスのチェックボックスをデフォルトでONにする便利な拡張機能。",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://twitcasting.tv/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "select_checkbox_all.js"
            ],
            "matches": [
                "https://twitcasting.tv/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitcasting.tv/*"
            ],
            "run_at": "document_start",
            "js": [
                "select_checkbox_all.js"
            ]
        }
    ],
    "icons": {
        "16": "Twitcasting_CheckBox_Icon_16x16.png",
        "48": "Twitcasting_CheckBox_Icon_48x48.png",
        "128": "Twitcasting_CheckBox_Icon_128x128.png"
    },
    "action": {
        "default_icon": {
            "16": "Twitcasting_CheckBox_Icon_16x16.png",
            "48": "Twitcasting_CheckBox_Icon_48x48.png",
            "128": "Twitcasting_CheckBox_Icon_128x128.png"
        },
        "default_title": "Twitcasting CheckBox All Select"
    }
}